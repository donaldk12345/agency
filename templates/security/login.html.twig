 {% extends "base.html.twig" %}
 {% block body %}
   <h1 style="text-align:center; color:#00bcd4; font-style:bold;" class="mt-5">Connexion </h1>
   <div class="container-fluid ">
    <div class="row justify-content-center">
       <div class="col-6 col-sm-6 col-md-3">
   <form class="form-horizontal"  action=" {{ path('security_login') }} " method="post">
        <div class="form-group">
          <label  class="control-label col-md-6">Email:</label>
          <div class="col-md-12">
          <input type="email" class="form-control" name="_username"  required="" placeholder=" Entrez votre email" class="col-md-6">
          </div>
        </div>
        <div class="form-group">
          <label  class="control-label col-md-6">Mot de passe:</label>
          <div class="col-md-12">
          <input type="password" class="form-control" name="_password" required="" placeholder="Entrez votre mot de passe " class="col-md-6">
          </div>
        </div>
            
        <div class="mt-3">
            <button class="btn btn-raised shadow my-button w-xs cyan col-md-12" type="submit" >Connexion</button>
    
         </div>
         <div class="mt-4 text-primary">
         <a href=" {{ path('app_forgot_password_request')}} " style="text-decoration:none; color:#00bcd4;">j'ai oublier mon mot de passe !</a>
         </div>

      </form>
       </div>
       </div>
   </div>
 {% endblock %}