{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
<style>
    .container .row .card{
    margin:10px !important;
    box-shadow: 0 0 10px rgb(0,0,0,0.3) !important;
}
.container .row{
    width:100%;
}
.container .row .card img{
  
}
*{

  margin:0;
  padding:0;
}
.inner{
   overflow: hidden;
}
.inner img{

transition: all 1.5 ease;
}
.inner:hover img{
  transform: scale(1.1);
} 
@media(max-width:450px){

  .row{
    position:relative;
    width:100%;
  }
  .card{
    position: absolute;
    right:0%;
  }
}
</style>
<div class="container mt-4">
<div class="row justify-content-center">
  {%  for article in articles  %}
  <div class="col-md-4">
  <div class="card" style="width: 20rem;">
    <div class="inner">
    <img src=" /images/blog/{{ article.imageName }} " class="card-img-top" alt="..." style="width:100%; height:40vh;">
    </div>
    <div class="card-body">
      <h5 class="card-title"> {{ article.titre }} </h5>
      <p class="card-text"> {{ article.content }} </p>
      <p class="card-text"><small class="text-muted"> {{ article.createAt | date ('d/m/y') }} Ã  {{ article.createAt | date ('h:i') }}</small></p>
      <a href="#" class="btn btn-primary">Go somewhere</a>
    </div>
  </div>
  </div>
   {% endfor %} 
</div>
</div>
{% endblock %}
